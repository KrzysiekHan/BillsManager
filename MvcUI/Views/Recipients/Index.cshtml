@model IEnumerable<MvcUI.Models.RecipientVM>
@{
    ViewBag.Title = "Index";
}

<h2>Lista odbiorców</h2>

<p>
    <a href="@Url.Action("Create", "Recipients")" class="btn btn-success">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Dodaj odbiorcę
    </a>
</p>
<table class="table table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CompanyName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Account)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerServiceUrl)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerServiceUrl)
            </td>
            <td>
                <a href="@Url.Action("Edit", "Recipients",new { id = item.RecipientId })" class="btn btn-default">
                    <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("Details", "Recipients",new { id = item.RecipientId })" class="btn btn-default">
                    <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                </a>
                <a href="@Url.Action("Delete", "Recipients",new { id = item.RecipientId })" class="btn btn-default">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
            </td>
        </tr>
    }

</table>

@section scripts{
    <script>
        $(function () {
            var message = '@ViewBag.msg';
            if (message != '') {
                toastr.success(message);
            }
        });
    </script>
}
